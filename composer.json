{
    "name": "damianb/message-center",
    "description": "It allows to register eventSource components on different channels and dispatches events throughout channels to registered listeners",
    "authors": [
        {
            "name": "Damian Bistram",
            "role": "lead"
        }
    ],   
    "license": "MIT", 
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "MessageCenter\\": "src/",
            "Utils\\": "src/",
            "ExampleApp\\": "examples/",
            "ExampleApp\\Listeners\\": "examples/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\MessageCenter\\": "tests/"
        }
    },
    "scripts": {
        "code-corrector": "./vendor/bin/phpcbf",
        "code-sniffer": "./vendor/bin/phpcs",
        "test": "phpunit",
        "example": "php ./examples/main.php"
    } 
}
